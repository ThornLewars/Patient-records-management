body{
margin:0;
padding:0;
font-family:roboto;
background:linear-gradient(135deg,#71b7e6,#fff);
height:100vh;
overflow:hidden;
}
.center{
position: absolute;
top:50%;
left: 50%;
transform: translate(-50%,-50%);
width:800px;
height:300px;
background:#f8f7ff;
border-radius:10px;
}

.center h4{
	text-align:center;
	padding:top 10px;
	border-bottom: 1px solid silver;
}
.center form{
	padding: 0 40px;
	box-sizing: border-box;
}
input[type="submit"]{
	width:100%;
	height:40px;
	border:1px solid white;
	background:#71b7e6;
	border-radius:25px;
	font-size:18px;
	color:#fff;
	font-weight:500;
	cursor:pointer;
	outline:none;
}
input[type="submit"]:hover{
	border color:#2691d9;
	transition:0.5s;

}
	form .Apointment-details{
 display:flex;
 flex-wrap: wrap;
 justify-content: space-between;
 	 margin: 20px 0 12px ;
 }

form .Apointment-details .input-box{

width: calc(100% / 2 - 0px);
padding:10px;
}
.Apointment-details .input-box input{
	 height:40px;
	 width:100%;
	 outline:none;
	 border-radius:5px;
	 border:1px solid #ccc;
	 padding:left 15px;
	 font-size:16px;
	 border-bottom-width: 2px;
	 transition: all 0.3s ease;
}
.Apointment-details .input-box input:focus,
.Apointment-details .input-box input:valid{
	border-color: #71b7e6;
	 
}
 .Apointment-details .input-box .details{
	font-weight:500px;
	margin-bottom:5px;
	display:block;	
 }
 select{
	width:340px;
    background: #71b7e6;
    color: #fff;
	margin-left:10px;
    padding:0 10px;
    font-size: 18px;
}
select.option{
	color: #000;
    padding: 0 10px;
}